@model Model.EF.BaiViet

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var binhluan = (List<Model.EF.BinhLuanBaiViet>)ViewBag.ListBL;

}

<div id="colorlib-main">
    <div id="slideshow-page">
        <div id="slideshow">
            <div class="slide-wrapper">
                <div class="slide"><img src="/Assets/Client/images/slider1.jpg"></div>
                <div class="slide"><img src="/Assets/Client/images/slider2.jpg"></div>
                <div class="slide"><img src="/Assets/Client/images/slider3.jpg"></div>
                <div class="slide"><img src="/Assets/Client/images/slider4.jpg"></div>
                <div class="slide"><img src="/Assets/Client/images/slider5.jpg"></div>
            </div>
        </div>
    </div>

    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container">
            <div class="row d-flex">
                <div class="col-xl-8 py-5 px-md-5">
                    <h3 class="sidebar-heading">@Model.TieuDe</h3>
                    <hr />
                    <div class="row pt-md-4">
                        <div class="col-md-12">
                            <div class="blog-entry ftco-animate d-md-flex">
                                <div class="text text-2 pl-md-4">
                                    <p class="meta">
                                        <span><i class="icon-calendar mr-2"></i>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", @Model.NgayDang))</span>
                                        <span><a href="#"><i class="icon-folder-o mr-2"></i>@Model.TheLoai.TenTheLoai</a></span>
                                        <br />
                                        <span><i class="icon-eye mr-2"></i>@Model.TongLuotXem</span>
                                    </p>
                                    <img src="~/Anh/@Model.Image" style="width: 500px; height: 300px" />
                                    <p>@Model.NoiDung</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pt-5 mt-5">
                @{
                    var ten = (DuLichBui.Common.TaiKhoanLogin)Session[DuLichBui.Common.CommonConstants.USER_SESSION];
                }
                @foreach (var item in binhluan)
            {
                    @*<h3 class="mb-5 font-weight-bold">6 Comments</h3>*@
                    <ul class="comment-list">
                        <li class="comment">
                            <div class="vcard bio">
                                @if (@item.ThanhVien.AnhDaiDien == null)
                                {
                                    <img src="~/Anh/avatar.jpg" alt="Image placeholder">
                                }
                                else
                                {
                                    <img src="~/Anh/@item.ThanhVien.AnhDaiDien" alt="Image placeholder">

                                }
                            </div>
                            <div class="comment-body">
                                <h3>@item.ThanhVien.HoTen</h3>
                                <div class="meta">@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.NgayBinhLuan))</div>
                                <p>@item.NoiDungBinhLuan</p>
                                <p><a href="#" class="reply">Trả lời</a></p>
                            </div>
                        </li>
                    </ul>
                }
                @if (ten == null)
                {
                    <div class="marquee">
                        Mời đăng kí để bình luận bài viết,
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#dialog1">
                            <marquee width="100%" behavior="alternate">Đăng kí tài khoản</marquee>
                        </button>

                    </div>
                }
                else
                {
                    <div class="comment-form-wrap pt-5">
                        <div class="form-group">
                            <label for="message">Nội dung bình luận</label>
                            <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Bình luận" class="btn py-3 px-4 btn-primary">
                        </div>
                    </div>

                }
            </div>

            <div class="modal fade" id="dialog1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="column" id="main">
                                <h1>Đăng kí tài khoản </h1>
                                <form>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Email</label>
                                        <input type="password" class="input-user" id="exampleInputPassword1" placeholder="Email.....">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Số điện thoại</label>
                                        <input type="password" class="input-user" id="exampleInputPassword1" placeholder="Số điện thoại.....">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputName">Tài khoản</label>
                                        <input type="name" class="input-user" id="exampleInputName" placeholder="Tài Khoản.....">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Mật khẩu</label>
                                        <input type="password" class="input-user" id="exampleInputPassword1" placeholder="Mật khẩu.....">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Nhập lại mật khẩu</label>
                                        <input type="password" class="input-user" id="exampleInputPassword1" placeholder="Nhập lại mật khẩu.....">
                                    </div>

                                    <input type="submit" class="btn btn-primary-user" value="Đăng kí" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

</div>


